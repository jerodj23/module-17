{
    "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",  // Add this line
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  